<ul class="nav nav-tabs">
  <li><%= link_to '首頁', restaurants_path %></li>
  <li class='active'><%= link_to '最新動態', feeds_restaurants_path %></li>
  <li ><%= link_to 'TOP10餐廳', ranking_restaurants_path %></li>
  <li '><%= link_to '美食達人', users_path %></li>
</ul>

<div class='container'>
  <div class='row'>
    <div class='col-md-6'>
      
      <div class="panel panel-default">
        <h2 class='panel-heading'>最新餐廳</h2>
        <div class="panel-body">
          <% @recent_restaurants.each do |restaurant| %>
            <%= link_to restaurant.name, restaurant %><br>
            <%= restaurant.description %><br>
            <%= restaurant.category.name %><br>
            <hr>
          <% end %>
        </div>
      </div>
      
    </div>
    <div class='col-md-6'>
      
      <div class="panel panel-default">
        <h2 class='panel-heading'>最新評論</h2>
        <div class="panel-body">
          <% @recent_comments.each do |comment| %>
            
            <h3><%= link_to comment.restaurant.name, comment.restaurant %></h3>
            <p><%= comment.content %> <br>-by <%= link_to comment.user.name, comment.user %></p>
            <hr>
          <% end %>
        </div>
      </div>
      
    </div>
  </div>
</div>


