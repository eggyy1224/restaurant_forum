<div class="container">
  <div class='row'>
    <div class='col-md-12'>
      

      <div class='form-inline'>
        <%= form_for [:admin, @category] do |f| %>
          <div class='form-group'>
            <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
          </div>

          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
        
        <% if @category.errors.any? %>
          <%= @category.errors.full_messages.to_sentence %>
        <% end %>
        
      </div>

      <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>#</th>
              <th>分類名稱</th>
              <th>#</th>
            </tr>
          </thead>
         <% @categories.each do |category| %>
          <tbody>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.name %></td>
              <td>
                <%= link_to '展開', admin_category_path(category), class: 'btn btn-primary' %>
                <%= link_to '編輯', edit_admin_category_path(category), class: 'btn btn-primary' %>
                <%= link_to '刪除', admin_category_path(category), method: :delete, data: { confirm: '你確定要刪除分類嗎？' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <div>
        <%=  link_to '回到餐廳頁面', admin_restaurants_path, class: 'btn btn-primary' %>

      </div>
    </div>

    
  </div>
</div>