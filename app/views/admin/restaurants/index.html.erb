

<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <div>
        <%= link_to "分類總表", admin_categories_path, class: 'btn btn-primary'  %>
        <%= link_to "新增餐廳", new_admin_restaurant_path, class: 'btn btn-primary'  %>
      </div>
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>分類</th> 
            <th>名子</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          
          <% @restaurants.each do |restaurant| %>
            <tr>
              <th scope="col"><%= restaurant.id %></th>
              <td><%= restaurant.category.name %></td>
              <td><%= restaurant.name %></td>
              <td>
                <%= link_to '展開', admin_restaurant_path(restaurant) %>
                <%= link_to '編輯', edit_admin_restaurant_path(restaurant) %>
                <%= link_to '刪除', admin_restaurant_path(restaurant), method: :delete, data: { confirm: '你確定要刪除嗎？' } %>
              </td>
            </tr>
            
          <% end %>
            
          
        </tbody>
      </table>
      <div class='text-center'>
        <%= paginate @restaurants %>
      </div>
    </div>
  </div>
</div>
