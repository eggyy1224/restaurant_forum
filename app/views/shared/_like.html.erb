<% if restaurant.is_liked_by?(current_user) %>
  <%= link_to  unlike_restaurant_path(restaurant), method: :post, class: 'btn btn-info' do %>
    <i class="glyphicon glyphicon-thumbs-down">收回讚</i>
  <% end %>
<% else %>
  
  <%= link_to like_restaurant_path(restaurant), method: :post, class: 'btn btn-primary' do %>
    <i class="glyphicon glyphicon-thumbs-up">讚</i>
  <%end%>

<% end %>