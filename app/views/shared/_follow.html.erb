<% if user != current_user %>
  <div>
    <% if current_user.following?(user) %>
      <%= link_to 'Unfollow', followship_path(user), method: :delete, class: 'btn btn-danger btn-sm button' %>
    <% else %>
      
      <%= link_to 'Follow', followships_path(following_id: user.id), method: :post, class: 'btn btn-primary btn-sm button' %> 
    <% end %> 
    
  </div>
    
    
    
  
<% end %>