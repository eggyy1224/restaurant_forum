<div class='container'>
  <div class='row'>
    
    <% @restaurants.each do |restaurant| %>
      <div class='col-md-4 col-sm-6'>
        <div class='restaurant-item'> 
          <%= image_tag restaurant.image, class: "img-responsive center-block" %>
          <div class='caption'>
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>

            <p class="label label-default"><%= restaurant.category.name %></p>
            <p class="label label-default"><%= restaurant.likes.count %> likes</p>
            <%= render 'shared/favorite', restaurant: restaurant %>
            
            
            <p><%= truncate(restaurant.description, length: 40) %></p>

          </div>
          
        </div>
      </div>
    <% end %>
  </div>
</div>
  
    

<div class='text-center'>
  <%= paginate @restaurants %>
</div>