<% if user != current_user %>
  <div>
    <% if current_user.friend?(user) %>
      <%= link_to 'Unfriend', friendship_path(user), method: :delete, class: 'btn btn-danger btn-sm button' %>
    <% else %>
      
      <%= link_to 'Add friend', friendships_path(friend_id: user.id), method: :post, class: 'btn btn-primary btn-sm button' %> 
    <% end %> 
  </div>
    
  
    
    
  
<% end %>