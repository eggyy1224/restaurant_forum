


<div class='container'>
  <div class='row'>
    <h1>個人資料</h1>
    <hr>
    <div class='col-md-4'>
      <%= image_tag @user.avatar, class: "img-responsive center-block img" %>
    </div>
    <div class='col-md-8'>
      <h1><%= @user.name %></h1>
      <p><%= @user.intro %></p>
      <p><%= @user.email %></p>
      <% if @user == current_user %>
        <%= link_to "編輯檔案", edit_user_path(@user) %>
      <% end %>
      
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @favorite_restaurants.count %> 收藏的餐廳</h3>
      </div>
      <div class="panel-body">
        <% @favorite_restaurants.each do |restaurant| %>
          <div class='col-md-3 my-restaurant text-center'>
            <%= link_to(restaurant_path(restaurant)) do %>
              <%= restaurant.name %>
              <%= image_tag restaurant.image, class: "img-responsive center-block" %><br>
              
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

