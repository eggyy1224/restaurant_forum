<h1>show page</h1>


<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <%= image_tag @user.avatar, class: "img-responsive center-block img" %>
    </div>
    <div class='col-md-8'>
      <h1><%= @user.name %></h1>
      <p><%= @user.intro %></p>
      <p><%= @user.email %></p>
      <% if @user == current_user %>
        <%= link_to "編輯檔案", edit_user_path(@user) %>
      <% end %>
      
    </div>
  </div>
</div>